<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


    <PreferenceCategory
        android:title="Point Tracking Options">

        <EditTextPreference
            android:key="pref_trackingSearchWindowSize"
            android:title="@string/pref_trackingSearchWindowSize"
            android:dialogTitle="@string/pref_trackingSearchWindowSize_disp"
            android:defaultValue="@string/pref_trackingSearchWindowSize_default"
            />

        <EditTextPreference
            android:key="pref_trackingSearchEpsilon"
            android:title="@string/pref_trackingSearchEpsilon"
            android:dialogTitle="@string/pref_trackingSearchEpsilon_disp"
            android:defaultValue="@string/pref_trackingSearchEpsilon_default"
            />

        <EditTextPreference
            android:key="pref_trackingSearchMaxLevel"
            android:title="@string/pref_trackingSearchMaxLevel"
            android:dialogTitle="@string/pref_trackingSearchMaxLevel_disp"
            android:defaultValue="@string/pref_trackingSearchMaxLevel_default"
            />

        <EditTextPreference
            android:key="pref_trackingSearchMinEigenThreshold"
            android:title="@string/pref_trackingSearchMinEigenThreshold"
            android:dialogTitle="@string/pref_trackingSearchMinEigenThreshold_disp"
            android:defaultValue="@string/pref_trackingSearchMinEigenThreshold_default"
            />

    </PreferenceCategory>


    <PreferenceCategory
        android:title="Point Display Options">

        <EditTextPreference
