            android:dialogTitle="@string/pref_rotateDegreesPostProcess"
            android:entries="@array/pref_rotateDegreesPostProcess_entries"
            android:entryValues="@array/pref_rotateDegreesPostProcess_values"
            android:defaultValue="90" />


