            android:entryValues="@array/pref_postProcessingOrientation_values"
            android:defaultValue="@string/pref_postProcessingOrientation_default" />

        <ListPreference
            android:key="pref_postProcessingSize"
            android:title="@string/pref_postProcessingSize"
