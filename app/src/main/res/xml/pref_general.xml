            android:dialogTitle="@string/pref_linePointColor"
            android:entries="@array/pref_linePointColor_entries"
            android:entryValues="@array/pref_linePointColor_values"
            android:defaultValue="@string/pref_linePointColor_default" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Line Display Options">

        <ListPreference
            android:key="pref_lineNoAngleColor"
            android:title="@string/pref_lineNoAngleColor"
